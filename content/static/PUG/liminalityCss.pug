mixin liminalityCss
    style(type='text/css').
            .background2 {
                background-image: url('/images/TimsOKC/liminality/stairs1.jpeg');
                background-size: cover;
                background-position: center;
                max-width: 100vw;
                height: 33vh;
                padding:0;
                margin:0;
                display: flex;
                justify-content: center;
                transition: width 2s, height 1s;
            }
        .background-inner2 {
                display: flex;
                justify-content: center;
                width: 100%;
                height: 33vh;
                vertical-align: top;
                background-color: rgba(0,0,0,#{backgroundOpacity});
                z-index: 1;
            }
        .logo2 {
            font-family: 'Orbitron', sans-serif;
            color: white;
            font-weight: 200;
            font-size: 7vw;
        }
        #liminality {
            color:white;
            scroll-behavior: smooth;
        }

        .grow {
            transition: height 1s;
            height: 100vh;
        }

        #liminality .content .hidden {
            display: none;
        }

        #liminality .content {
            color: black;
        }

        #liminality .content {
            line-height: calc(1ex / 0.32);
        }

        .content p {
            display: block;
            font-size: 1em;
            line-height: calc(1ex / 0.32);
            margin: calc(1ex / 0.32) 0;
            max-width: 100%;
            margin-block-start: 1em;
            margin-block-end: 1em;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
            max-width: 920px;
            justify-content: center;
        }

        .content q {
            display: block;
            font-size: 1em;
            line-height: calc(1ex / 0.32);
            margin: calc(1ex / 0.32) 0;
            max-width: 100%;
            margin-block-start: 1em;
            margin-block-end: 1em;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
            max-width: 920px;
            justify-content: center;
            border-style: solid;
            border-width: 5px;
            padding: 20px;
        }

        .outerContent {
            display: flex;
            justify-content: center;
            background-color: rgba(27,27,47,100);
            color: rgba(160, 168, 255, 100);
            font-size: 18px;
        }

        .innerContent {
            display: flex;
            justify-content: center;
            vertical-align: top;
        }

        .fullBackground {
            background-image: url('/images/TimsOKC/liminality/stairs1.jpeg');
            background-size: cover;
            background-position: center;
            max-width: 100vw;
            height: 50vh;
            padding:0;
            margin:0;
            display: flex;
            justify-content: center;
            transition: width 2s, height 1s;
        }

        .fullBackground.car {
            background-image: url('/images/TimsOKC/liminality/cars.jpeg');
        }

        .fullBackground.laundromat {
            background-image: url('/images/TimsOKC/liminality/laundromat.png');
        }

        .fullBackground.house {
            background-image: url('/images/TimsOKC/liminality/house1.jpeg');
        }
        
        .fullBackground.church {
            background-image: url('/images/TimsOKC/liminality/church.jpeg');
        }

        #content {
            transition: width 2s, height 2s;
        }

        #content h2 {
            justify-content: center;
            text-decoration: underline;
            text-align: center;
        }

        .video-container { position: relative; padding-bottom: 56.25%; padding-top: 30px; height: 0; overflow: hidden; }

        .video-container iframe, .video-container object, .video-container embed { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }

        .video-container-outer
        {
            max-width: 500px;
        }

        #content a:link {
            color: rgba(255, 246, 146, 100);
            text-decoration: underline;
        }

        #content a:visited {
            color: rgba(255, 246, 10, 100);
            text-decoration: underline;
        }

        .interrupt {
            height: 40vh;
            display: block;
            margin-left: auto;
            margin-right: auto;
            max-width: 80vw;
        }

        #content h4 {
            text-align: center;
            font-size: 35px;
            padding: 10px;
            border-style: double;
            border-width: 5px;
            display: block;
            margin: calc(1ex / 0.32) 0;
            max-width: 100%;
            margin-block-start: 1em;
            margin-block-end: 1em;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
            max-width: 920px;
            justify-content: center;
        }
